    "Serilog": {
        "Enabled": true, // Set to false to disable logging
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": { "restrictedToMinimumLevel": "Information" }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "logs/api-log.txt",
                    "rollingInterval": "Day",
                    "restrictedToMinimumLevel": "Information"
                }
            }
        ]
    },
    "Logging": {
        "EnableChangeLogging": true,
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        },
        "TableLogging": {
            "transaction_heads": true,
            "families": true,
            "transactions": true,
            "banks": true,
            "contribution_settings": true,
            "family_dues": true,
            "family_contributions": true,
            "financial_years": true
        }
    },
